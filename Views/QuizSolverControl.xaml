<UserControl x:Class="Quiz.Views.QuizSolverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Quiz.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:QuizSolverViewModel/>
    </UserControl.DataContext>

    
    <ScrollViewer>
        <StackPanel Background="#FF98AF85" >
            <TextBlock Text="Quiz Solver" Foreground="#FF2C4019" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontWeight="Bold" FontSize="36" Margin="0,10,0,10" />
            <Separator Margin="40,0,40,0"  FontSize="72" FontWeight="Bold" Background="#FF2C4019"/>
            <TextBlock Text="Welcome to our quiz! Load a quiz below to start the game!" Foreground="#FF2C4019" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,10" FontSize="16" 
                       FontWeight="Bold"  />
            <Button x:Name="loadQuiz_btn" Content="Load Quiz" Foreground="#FF98AF85" Background="#FF2C4019" 
                    FontWeight="Bold" Width="200" Height="25" />
            <Separator Margin="40,20,40,20"  FontSize="72" FontWeight="Bold" Background="#FF2C4019"/>
            <TextBlock Text="You have 30s to complete the quiz, have fun!" Foreground="#FF2C4019" 
                       HorizontalAlignment="Center"  FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />
            <Button x:Name="start_btn" Content="Start Quiz" Foreground="#FF98AF85" Background="#FF2C4019" 
                    FontWeight="Bold" Width="200" Height="25" Command="{Binding StartTimerCommand}" />
            <Separator Margin="40,20,40,20"  FontSize="72" FontWeight="Bold" Background="#FF2C4019"/>
            <TextBlock Text="{Binding TimeLeft}" HorizontalAlignment="Center" FontWeight="Bold" 
                       FontSize="36" Margin="0,0,0,10" Foreground="#FF2C4019" />
            
        </StackPanel>
    </ScrollViewer>
    
    
    
</UserControl>
