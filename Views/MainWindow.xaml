<Window x:Class="Quiz.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Quiz.Views"
        xmlns:vm="clr-namespace:Quiz.ViewModels"
        xmlns:local="clr-namespace:Quiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:MyHomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SecondViewModel}">
            <views:SecondView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Przełącz widok" Click="SwitchView_Click" Width="150" Margin="10"/>
        <uc:QuizGeneratorControl x:Name="generatorControl" Visibility="Visible"/>
        <uc:QuizSolverControl x:Name="solverControl" Visibility="Collapsed"/>
    </Grid>
</Window>
